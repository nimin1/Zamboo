# Zamboo Environment Configuration

# DeepSeek API Configuration (Optional)
# Get your API key from https://platform.deepseek.com/
# Note: App works without this - templates run offline!
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# App Configuration
NEXT_PUBLIC_APP_NAME=Zamboo
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_DESCRIPTION="Code Games with a Funky Panda"

# Development Settings
NODE_ENV=development

# PWA Settings
NEXT_PUBLIC_PWA_ENABLED=true
NEXT_PUBLIC_OFFLINE_SUPPORT=true

# Feature Flags (for future use)
NEXT_PUBLIC_VOICE_INPUT_ENABLED=true
NEXT_PUBLIC_BLOCKLY_EDITOR_ENABLED=false
NEXT_PUBLIC_MULTIPLAYER_ENABLED=false
NEXT_PUBLIC_ANALYTICS_ENABLED=false